@model Pizza

@{
    ViewData["Title"] = "Modifica pizza";
    Layout = "_CustomLayout";

}

<section class="update-pizza">
<div class="container">
    <div class="row">
        <div class="col-6">
            <h2 class="py-4">Aggiungi nuova pizza</h2>
            <form asp-controller="Pizza" asp-action="Update" asp-router-id="@Model.Id" method="post">
                <div class="form-group col-6">
                    <label for="name">Nome</label>
                    <input asp-for="Name" type="text" class="form-control" id="name" placeholder="Inserisci nome della pizza">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label for="price">Descrizione</label>
                    <textarea asp-for="Description" type="text" class="form-control" id="price" placeholder="Inserisci prezzo della pizza"> </textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label for="price">Prezzo</label>
                    <input asp-for="Price" type="text" class="form-control" id="price" placeholder="Inserisci prezzo della pizza">
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Image">Inserisci immagine</label>
                    <input asp-for="Image" class="form-control" id="description" rows="3">
                </div>
                <button type="submit" class="btn btn-primary mt-3">Submit</button>
            </form>
        </div>
    </div>
</div>
</section>
